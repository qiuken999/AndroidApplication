<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff9c4"
    tools:context="com.example.coco.a420project.MainActivity">

    <TextView
        android:text="Study Game"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#1D078C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView" />

    <Button
        android:text="Start"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFF236"
        android:background="@drawable/buttonshape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="-10dp"
        />

    <Button
        android:text="Difficult Mode"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFF236"
        android:background="@drawable/buttonshape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonH"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="-10dp"
        />

    <Button
        android:text="Introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro"
        android:textColor="#FFF236"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/buttonH"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="310dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/intro"
        android:id="@+id/imageLogo"/>

</RelativeLayout>
